<Window x:Class="Shadow_Bootstrapper.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shadow_Bootstrapper.Windows"
        mc:Ignorable="d"
        Title="KeySystem" Loaded="OnLoad" AllowsTransparency="True" Background="Transparent" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" Topmost="True" Height="350" Width="270">
    <Grid x:Name="MainGrid" ClipToBounds="True">
        <Grid.Background>
            <LinearGradientBrush EndPoint="2,1" StartPoint="0.4,0.1" Opacity=".9">
                <GradientStop Color="#FF55000A" Offset="0"/>
                <GradientStop Color="#FF505050" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="0" Color="#940700"/>
        </Grid.Effect>
        <Label x:Name="TitleLabel" Content="Incorrect key provided!" FontSize="20" Foreground="White" Margin="34,188,34,123" RenderTransformOrigin="0.5,0.5" FontFamily="Segoe UI Light"/>
        <Image Margin="103,119,103,167" Source="/Shadow Bootstrapper;component/WrongIcon.png" Stretch="Fill"/>
    </Grid>
</Window>
